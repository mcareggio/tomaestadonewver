<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context="com.careggio.marcos.tomaestado.Serverconexion">
<EditText
    android:layout_width="fill_parent"
    android:layout_height="40dp"
    android:id="@+id/ip"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Probar"
    android:id="@+id/probar"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver Parametros"
        android:id="@+id/parametros"/>

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Reset"
    android:id="@+id/reset"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Descargar Archivos"
    android:id="@+id/descarga"/>
<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Exportar y Subir Archivos"
    android:id="@+id/exportar_y_subir"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Toma Estado completo y Subir Archivo"
        android:id="@+id/exportar_y_subir_completo"/>
    <TextView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:id="@+id/salida"/>
</LinearLayout>
